{% sw_extends '@Storefront/storefront/layout/base.html.twig' %}

{% block base_flashbags %}
    {{ parent() }}
    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <script>
                alert("{{ message|escape('js') }}");
            </script>
        {% endfor %}
    {% endfor %}
{% endblock %}
{% block base_body_script %}
    {{ parent() }}
    <script>
        window.easterConfetti = {{ app.session.get('showEasterConfetti') ? 'true' : 'false' }};
    </script>
    {% do app.session.remove('showEasterConfetti') %}
{% endblock %}